  body
    .layer4
      .page
        // Menubar
        .menubar.animonload1
          a.menubutton.menubutton-top-left.animonload1(href='../') Home
          |           
          a.menubutton.menubutton-mid.animonload1(href='../blog/') Blog
          |           
          a.menubutton.menubutton-mid.animonload1(href='../resume/') Resume
          |           
          a.menubutton.menubutton-top-right.animonload1(href='../weather/') Weather
        |       
        .menubar.animonload1
          a.menubutton.menubutton-bottom-left.animonload1(href='../stats/') Stats
          |           
          a.menubutton.menubutton-mid.animonload1(href='../tools/') Tools
          |           
          a.menubutton.menubutton-mid.animonload1(href='../typing/') Typing
          |           
          a.menubutton.menubutton-bottom-right.animonload1(href='../matrix/') Matrix
        // Title Header
        h1.animonload1 Tools
        // Stopwatch
        .stopwatch-widget.animonload1
          h2.animonload1 Stopwatch
          | &#x9;&#x9;
          .stopwatch-buttons-container.animonload1
            button.stopwatch-toggle-button.animonload1(onclick='togglestopwatch();') Start
            | &#x9;&#x9;
            button.stopwatch-clear-button(onclick='clearstopwatch();') Clear
          | &#x9;&#x9;
          .stopwatch-time.animonload1 00:00:00.000
          | &#x9;&#x9;
          .stopwatch-clock.animonload1
            .stopwatch-seconds.stopwatch-hands.animonload1
            | &#x9;&#x9;
            .stopwatch-minutes.stopwatch-hands.animonload1
            | &#x9;&#x9;
            .stopwatch-hours.stopwatch-hands.animonload1
        |         
        br
        // Credits
        .credits.animonload1
          | Credits
